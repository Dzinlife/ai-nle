{
	"$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
	"vcs": {
		"enabled": false,
		"clientKind": "git",
		"useIgnoreFile": false
	},
	"files": {
		"ignoreUnknown": false,
		"includes": [
			"packages/**/src/**/*",
			"packages/**/.vscode/**/*",
			"packages/**/index.html",
			"packages/**/vite.config.*",
			"!packages/**/src/routeTree.gen.ts",
			"!packages/**/src/styles.css"
		]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"assist": { "actions": { "source": { "organizeImports": "on" } } },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": false,
			"correctness": {
				"noUnusedVariables": "warn",
				"noUnusedImports": "warn",
				"noUndeclaredVariables": "warn"
			},
			"style": {
				"noParameterAssign": "off",
				"useConst": "warn"
			},
			"suspicious": {
				"noExplicitAny": "off",
				"noArrayIndexKey": "off"
			},
			"complexity": {
				"noForEach": "off",
				"noBannedTypes": "off"
			},
			"performance": {
				"noDelete": "off"
			},
			"security": {
				"noDangerouslySetInnerHtml": "warn"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	}
}
